<ol>
  <% @articles.each do |article|%>
    <li>
      <a href = "<%= article["url"] %>"> <%= article["title"] %> </a>
      <span>(<%= "#{article["url"]}" %>)</span>
      <br>
        <div style = "width=75%;font-size:9pt;"><%="[#{article["calander_time"]}] #{URI.decode(article["description"])}" %></div>
        <% if article["comments"] != nil %>
        <div>
          <ul>
            <% article["comments"][0..2].each do |comment|%>
              <li class= "comment"><%="[#{comment["time"]}] #{comment["comment"]}" %></li>
            <% end %>
            <li ><a class = "add_comment" href = "http://localhost:4567/addcomment/<%= article["article_id"] %>">Add a comment</a></li>
          </ul>
